@model Entertainment_Lib.Models.TVProgram

@{
    ViewBag.Title = Model.Name;
    ViewBag.Css = "~/Content/tvprograms_details.css";
}

<div class="wrapper">
    <div class="categories">
        <h3>Categories</h3>
        <ul>
            <li>@Html.ActionLink("Movies", "Index", "Movie")</li>
            <li>@Html.ActionLink("TVPrograms", "Index", "TVProgram")</li>
        </ul>
    </div>
    <div class="tvprogram">
        <h3>@Model.Name</h3>
        <p class="description">
            @Model.Description
        </p>
    </div>
</div>