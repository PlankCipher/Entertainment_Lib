@model Entertainment_Lib.ViewModels.TVProgramHomeViewModel

@{
    ViewBag.Title = Model.tvprogram.Name;
    ViewBag.Css = "~/Content/tvprograms_details.css";
}

<div class="wrapper">
    <div class="categories">
        <h3>Categories</h3>
        <ul>
            <li>@Html.ActionLink("Movies", "Index", "Movie")</li>
            <li>@Html.ActionLink("TVPrograms", "Index", "TVProgram")</li>
        </ul>
    </div>
    <div class="tvprogram">
        <h3>@Model.tvprogram.Name</h3>
        <p class="description">
            @Model.tvprogram.Description
        </p>
        @if (User.Identity.IsAuthenticated && Model.currentUserId == Model.tvprogram.Owner.Id)
        {
            <a href="/TVProgram/Edit/@Model.tvprogram.Id" class="edit">
                <i class="far fa-edit"></i>
                Edit
            </a>
            <a href="/TVProgram/Delete/@Model.tvprogram.Id" class="delete">
                <i class="far fa-trash-alt"></i>
                Delete
            </a>
        }
    </div>
</div>