@model IEnumerable<Entertainment_Lib.Models.TVProgram>

@{
    // The page title and css file
    ViewBag.Title = "TV Programs";
    ViewBag.Css = "~/Content/tvprograms_home.css";
}

<!-- The wrapping div -->
<div class="wrapper">
    <!-- Categories div (on the left, or on top) -->
    <div class="categories">
        <h3>Categories</h3>
        <ul>
            <li>@Html.ActionLink("Movies", "Index", "Movie")</li>
            <li>@Html.ActionLink("TVPrograms", "Index", "TVProgram")</li>
        </ul>
    </div>
    
    <!-- Latest TV programs div (on the right, or at the bottom) -->
    <div class="latest">
        <h3>TV Programs</h3>
        
        <ul>
            @* Iterate over each tv program of the tv programs in the model *@
            @foreach (Entertainment_Lib.Models.TVProgram tvprogram in Model)
            {
                // And add a link to its Details page
                <li>
                    @Html.ActionLink(tvprogram.Name, "Details", "TVProgram", new { id = tvprogram.Id }, null)
                </li>
            }
        </ul>
        
        <!-- The "New" button -->
        <a href="/TVProgram/New" class="new">
            <i class="fas fa-plus"></i>
            New
        </a>
    </div>
</div>