@model Entertainment_Lib.ViewModels.HomeViewModel 

@{
    ViewBag.Title = "Home";
    ViewBag.Css = "~/Content/index.css";
}

    <div class="wrapper">
        <div class="categories">
            <h3>Categories</h3>
            <ul>
                <li>@Html.ActionLink("Movies", "Index", "Movie")</li>
                <li>@Html.ActionLink("TVPrograms", "Index", "TVProgram")</li>
            </ul>
        </div>
        <div class="latest">
            <h3>Latest</h3>
            <ul>
                @foreach (Entertainment_Lib.Models.Movie movie in Model.latestMovies)
                {
                    <li>
                        @Html.ActionLink(movie.Name, "Details", "Movie", new { id=movie.Id } , null)
                        <span class='category'>(Movie)</span>
                    </li>
                }
                @foreach (Entertainment_Lib.Models.TVProgram tvprogram in Model.latestTVPrograms)
                {
                    <li>
                        @Html.ActionLink(tvprogram.Name, "Details", "TVProgram", new { id = tvprogram.Id }, null)
                        <span class='category'>(TVProgram)</span>
                    </li>
                }
            </ul>
        </div>
    </div>