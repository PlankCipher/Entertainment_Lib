@model Entertainment_Lib.Models.Movie
@{
    if (Model.Id == 0)
    {
        ViewBag.Title = "New";
    } else
    {
        ViewBag.Title = "Edit";
    }
    ViewBag.Css = "~/Content/movies_new.css";
}

<h2>@ViewBag.Title movie</h2>

@using (Html.BeginForm("Save", "Movie"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.TextBoxFor(m => m.Name, new { placeholder = "Name" })
    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    
    @Html.TextAreaFor(m => m.Description, new { placeholder = "Description" })
    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.Owner.Id)
    <input type="submit" value="Save" class="submitBtn" />
}